{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Pebble",
  "version": "0.0.2",
  "identifier": "com.geraldnyeo.pebble",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Pebble",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFFNjU3QkYzMjlBMTU0RjAKUldUd1ZLRXA4M3RscnVNaWR0RjA1djFiaEFzei9DcWFSOWNVaHVpWWlxSEJKaGl4R0N6TkM2RDcK",
      "endpoints": [
        "https://github.com/geraldnyeo/pebble/tree/main/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
